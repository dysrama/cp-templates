{
  "cloudbuild": {
    "name": "gcr.io/google.com/cloudsdktool/cloud-sdk:slim",
    "args": ["gcloud", "beta", "builds", "triggers", "create", "github",
      "--name=${_APP_NAME}-trigger",
      "--repo-name=cp-templates",
      "--repo-owner=gitrey",
      "--branch-pattern=main",
      "--included-files=iac-terraform-cloudbuild/**",
      "--build-config=./iac-terraform-cloudbuild/cloudbuild.yaml",
      "--substitutions=_APP_NAME=${_APP_NAME},_BRANCH_NAME=${_BRANCH_NAME}"
    ]
  },
  "params": [
    {
      "param": "_APP_NAME",
      "label": "Application Name",
      "description": "Application that will be deployed.",
      "type": "string",
      "required": true
    },
    {
      "param": "_BRANCH_NAME",
      "label": "Branch name (Environment)",
      "description": "Where do you want to deploy the application?",
      "type": "string",
      "required": true
    }
  ],
  "roles": [
    "roles/compute.admin"
  ],
  "apis": [
    "run.googleapis.com",
    "artifactregistry.googleapis.com"
  ]
}
